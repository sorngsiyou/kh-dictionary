<%- include('header.ejs') %>
<style>
 body{
    margin: 0;
  padding: 0;   
  background-image: url('/images/bg.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  }
</style>
<div class="container">
    <div class="row">
        <div class="col-3 col-md-12 col-lg-3"></div>
        <div class="col-12 col-md-12 col-lg-6">
            <form action="/user" method="post">
                <div class="mb-3">
                    <label for="yourname" class="form-label"><i class="fa-solid fa-user"></i> ឈ្មោះរបស់អ្នក</label>
                    <input type="text" class="form-control" id="yourname" name="userName" required>
                  </div>
                <div class="mb-3">
                  <label for="email" class="form-label"><i class="fa-solid fa-envelope"></i> អ៊ីម៉ែល</label>
                  <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label"><i class="fa-solid fa-unlock"></i> លេខសម្ងាត់</label>
                  <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket"></i> ចុះឈ្មោះ</button>
              </form>
        </div>
        <div class="col-3 col-md-12 col-lg-3"></div>
    </div>
</div>
<%- include('footer.ejs') %>