<%- include('header.ejs') %>
<style>
  body{
    margin: 0;
  padding: 0;   
  background-image: url('/images/bg.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  height: 100vh;
  
  display: flex;
  align-items: center;
  justify-content: center;
  }
</style>
<div class="container">
    <div class="row">
        <div class="col-3 col-md-12 col-lg-3"></div>
        <div class="col-12 col-md-12 col-lg-6">
          <% if (errorFlash && errorFlash.length > 0) { %>
            <div id="autoCloseAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= errorFlash[0] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
            <form action="/" method="post">
                <div class="mb-3">
                  <label for="email" class="form-label"><i class="fa-solid fa-envelope"></i> អ៊ីម៉ែល</label>
                  <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label"><i class="fa-solid fa-unlock"></i> លេខសម្ងាត់</label>
                  <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-right-to-bracket"></i> ចូលបញ្ចូលទិន្នន័យ</button>
                <a href="/user" class="btn btn-info"><i class="fa-solid fa-user-plus"></i> ចុះឈ្មោះ</a>
              </form>
        </div>
        <div class="col-3 col-md-12 col-lg-3"></div>
    </div>
</div>
<%- include('footer.ejs') %>